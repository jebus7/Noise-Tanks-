<h1>Announcements</h1>

<table>
  <tr>
    <th>Author</th>
    <th>Title</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @announcements.each do |announcement| %>
  <tr>
    <td><%= announcement.admin.username %></td>
    <td><%= announcement.title %></td>
    <td><%= link_to 'View', announcement %></td>
    <td><%= link_to 'Edit', edit_announcement_path(announcement) %></td>
    <td><%= link_to 'Delete', announcement, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

